<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/commentItem_IV_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/user"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/commentItem_TV_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_toStartOf="@+id/commentItem_IV_icon"
            android:text="comment"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/commentItem_TV_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_toStartOf="@+id/commentItem_IV_icon"
            android:text="User name"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:layout_below="@+id/commentItem_TV_content"
            />
        <TextView
            android:id="@+id/commentItem_TV_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_toStartOf="@+id/commentItem_IV_icon"
            android:text="time"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_below="@+id/commentItem_TV_name"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>