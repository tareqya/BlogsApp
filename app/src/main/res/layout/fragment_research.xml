<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ResearchFragment">

    <Spinner
        android:id="@+id/freg_spinner_category"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        />

    <SearchView
        android:id="@+id/freg_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/freg_spinner_category"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/freg_RV_researches"
        android:layout_below="@id/freg_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>