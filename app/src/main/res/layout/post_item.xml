<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/post_TV_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/post_TV_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textSize="16sp"
            android:layout_below="@id/post_TV_title"
            />
        <ImageView
            android:id="@+id/post_IV_image"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_below="@+id/post_TV_description"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/post_TV_createTime"
            android:layout_below="@+id/post_IV_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"

            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>